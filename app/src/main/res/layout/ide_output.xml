<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/compileRun_lang_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="Language Name"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/compileRun_lang_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="Language Version"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/compileRun_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="Time"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/compileRun_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="Date"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/compileRun_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="Status"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/compileRun_memory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="Memory"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/compileRun_signal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="Signal"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/compileRun_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="Input"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/compileRun_output"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="Output"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/compileRun_stderr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="stderr"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/compileRun_cmpinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:text="cmpinfo : prog.cpp:1:1: error: ‘aaaa’ does not name a type\n aaaa\n ^~~~\n"
                    android:textSize="18sp"/>

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>