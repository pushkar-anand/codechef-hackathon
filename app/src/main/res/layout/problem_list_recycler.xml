<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/problemRecyclerItemConstrain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/problemCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="Code"
        android:textSize="18sp"
        android:textStyle="bold" />

        <TextView
        app:layout_constraintEnd_toStartOf="@+id/successfullSubmission"
        app:layout_constraintStart_toEndOf="@+id/problemCode"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/problemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="Problem Name"
        android:textSize="18sp"
        android:textStyle="bold" />

        <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/successfullSubmission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        tools:text="Submission"
        android:textSize="18sp"
        android:textStyle="bold" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>